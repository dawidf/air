<!DOCTYPE html>
<html class="no-js">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>
			{% spaceless %}AirBlog | {% block pageTitle %}{% endblock %}{% endspaceless %}
		</title>
		<link rel="icon" type="image/png" href="{{ asset('bundles/airblog/favicon.png') }}">
		<meta name="description" content="{% block siteDescription %}{% endblock %}">
		<meta name="viewport" content="width=device-width, initial-scale=1">


		{% block stylesheets %}
			<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700&subset=latin-ext,latin' rel='stylesheet' type='text/css'>

			{% stylesheets
			'bundles/airblog/css/normalize.css'
			'bundles/airblog/css/main.css'
			filter='cssrewrite,?yui_css'
			output='assets/css/compiled.css'
			%}
			<link rel="stylesheet" href="{{ asset_url }}">
			{% endstylesheets %}

			{#
            <link rel="stylesheet" href="{{ asset('bundles/airblog/css/normalize.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/airblog/css/main.css') }}">
            #}
		{% endblock %}
	</head>
	<body>        
		<header id="header">
			<div class="top">
				<div class="pos-center">

					
					<a class="mobile-menu-trigger" href="#">
						<span class="bar"></span>
						<span class="bar"></span>
						<span class="bar"></span>
					</a>
					
					<div class="menu">
						<nav>
							<ul>
								{#<li><a href="#">HOME</a></li>#}
								{#<li><a href="#">O MNIE</a></li>#}
								{#<li><a href="#">KONTAKT</a></li>#}
								{{ print_main_menu() }}
							</ul>
						</nav>

						{#<ul class="categories">#}
							{#<li><a href="#">Samoloty osobowe i pasażerskie</a></li>#}
							{#<li><a class="active" href="#">Samoloty odrzutowe</a></li>#}
							{#<li><a href="#">Samoloty wojskowe</a></li>#}
							{#<li><a href="#">Proy kosmiczne</a></li>#}
							{#<li><a href="#">Tajne rozwiązania</a></li>#}
						{#</ul>#}
						{{ print_categories_list() }}
						
						{# Jeśli jest zalogowany #}
						{% if app.user %}
							<div class="user-panel">
								<span class="user-name">Zalogowany jako <a href="{{ path('user_accountSettings') }}">{{ app.user.username }}</a></span>
								<a class="btn-green" href="{{ path('_logout') }}">Wyloguj</a>
							</div>
						{% else %}

							<div class="user-panel">
								<div class="btn-group">
									{% set loginUrl = path('blog_login') %}
									<a class="btn-green" href="{{ loginUrl }}">Zaloguj</a>
									<a class="btn-green" href="{{ loginUrl }}">Zarejestruj</a>
								</div>
							</div>

						{% endif %}



					</div>
					<div class="clearfix"></div>
				</div>
			</div>

			{% block topImage %}
				<div class="slider">
					<div class="viewport">
						<div class="slides-container">

							<div style="background-image: url('{{ asset('bundles/airblog/images/error404.png') }}')" class="slide"></div>
							<div style="background-image: url('{{ asset('bundles/airblog/images/slide-2.jpg') }}')" class="slide"></div>
							<div style="background-image: url('{{ asset('bundles/airblog/images/slide-3.jpg') }}')" class="slide"></div>
						</div>
					</div>

					<span class="nav prev"></span>
					<span class="nav next"></span>
				</div>
			{% endblock %}
		</header>

		<div id="main">

			<div class="header">
				<div class="pos-center">
					<h2 class="left-side">{% block contentTitle %}{% endblock %}</h2>

					{% if hideSerch is not defined %}
						<form class="right-side" action="{{ path('blog_search') }}">
							<input type="text" name="search" placeholder="Wyszukaj">

						</form>
					{% endif %}
				</div>
			</div>

			<div class="content">
				<div class="pos-center">
					<div class="left-side">

						{% block content %}
							<article class="post">
								<header>
									<h1>Suspendisse molestie vivamus fermentum</h1>

									<div class="meta-data">
